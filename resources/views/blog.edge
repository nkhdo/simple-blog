@layout('layouts/master')
@set('title', 'Blog Posts')

@section('main')
<ul>
  @each(post in posts)
  <li>
    {{post.createdAt.toFormat('yyyy-MM-dd')}}
    <a href="/{{post.slug}}">{{post.title}}</a>
  </li>
  @endeach
</ul>

@if(filter)
<p>
  <a href="/blog">Remove filter</a>
</p>
@elseif(tags.length)
<p>
@each(tag in tags)
  <a href="/blog?tag={{tag}}">#{{tag}}</a>
@endeach
</p>
@endif
@endsection