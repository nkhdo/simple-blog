{
  "name": "simple-blog",
  "version": "1.6.1",
  "private": true,
  "scripts": {
    "style:dev": "postcss ./resources/css/styles.css -o public/dist/styles.css",
    "style:prod": "NODE_ENV=production yarn style:dev",
    "build": "yarn style:prod && node ace build --production",
    "start": "node server.js",
    "dev": "yarn style:dev && node ace serve --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "postversion": "git push --tags && ./publish-docker $npm_package_version",
    "postbuild": "cp -R ./resources/locales ./build/resources"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^3.0.0",
    "@types/i18n": "^0.12.0",
    "@types/markdown-it": "^12.0.1",
    "@types/markdown-it-emoji": "^2.0.0",
    "@types/markdown-it-link-attributes": "^3.0.0",
    "@types/twemoji": "^12.1.1",
    "adonis-preset-ts": "^1.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-adonis": "^1.0.15",
    "eslint-plugin-prettier": "^3.3.1",
    "pino-pretty": "^4.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "youch": "^2.1.1",
    "youch-terminal": "^1.0.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^5.1.1",
    "@adonisjs/core": "^5.0.4-preview-rc",
    "@adonisjs/lucid": "^10.0.0",
    "@adonisjs/repl": "^1.0.0",
    "@adonisjs/session": "^4.0.0",
    "@adonisjs/shield": "^4.0.3",
    "@adonisjs/view": "^3.0.0",
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "autoprefixer": "^10.2.3",
    "elegant-slug": "^0.0.2",
    "highlight.js": "^10.5.0",
    "i18n": "^0.13.2",
    "luxon": "^1.25.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^7.0.1",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "phc-argon2": "^1.0.11",
    "postcss": "^8.2.4",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.1",
    "twemoji": "^13.0.1",
    "water.css": "^2.0.0"
  }
}
